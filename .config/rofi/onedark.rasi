entry {
    padding: 12;
    background-color: @bg;
    text-color: @fg;
    placeholder: "Search";
    border: 0px solid;
    border-radius: 0px;
}

inputbar {
    children: [prompt, entry];
    background-color: @bg;
    padding: 5;
    border: 0px solid;
    border-radius: 0px;
}

listview {
    background-color: @bg;
    columns: 1;
    lines: 10;
    border: 0px solid;
    border-radius: 0px;
}

mainbox {
    children: [inputbar, listview];
    background-color: @bg;
    border: 0px solid;
    border-radius: 0px;
}

prompt {
    enabled: true;
    padding: 12 0 0 12;
    background-color: @bg;
    text-color: @fg;
    border: 0px solid;
    border-radius: 0px;
}
