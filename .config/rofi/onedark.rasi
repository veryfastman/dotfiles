* {
    bg: #17191e;
    bg-selected: #1f2329;

    fg: #abb2bf;
    /* fg-selected: #888e98; */
    fg-selected: #4fa6ed;

    border-color: @bg-selected;

    border: 1;
    margin: 0;
    padding: 0;
    spacing: 0;
}

window {
    width: 30%;
    background-color: @bg;
}

element {
    padding: 8 12;
    background-color: transparent;
    text-color: @fg;
    border: 0px solid;
    border-radius: 0px;
    spacing: 10px;
}

element selected {
    text-color: @fg-selected;
    background-color: @bg-selected;
    border: 0px solid;
    border-radius: 0px;
}

element-text {
    background-color: transparent;
    text-color: inherit;
    vertical-align: 0.5;
    border: 0px solid;
    border-radius: 0px;
}

